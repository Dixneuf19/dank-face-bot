{
  "name": "Dank Face Bot",
  "description": "Dank Face Bot, deployed on heroku",
  "image": "heroku/python",
  "repository": "https://github.com/dixneuf19/dank-face-bot",
  "keywords": ["python", "flask", "face-recognition", "dank", "telegram" ],
  "addons": [ "heroku-postgresql" ],
  "env": {
    "SECRET_KEY": {
      "description": "Whatever secret key we might need",
      "generator": "secret"
    }
  },
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "python manage.py collectstatic --noinput",
        "test": "python manage.py test"
      }
    }
  }
}